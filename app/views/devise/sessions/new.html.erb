<div class="product-big-title-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="product-bit-title text-center">
          <h2>Log In</h2>
        </div>
      </div>
    </div>
  </div>
</div> <!-- End Page title area -->
<div class="col-md-16" style="text-align:center;">
  <br>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      
      <%= f.email_field :email, autofocus: true, :class => "ui icon input", :placeholder => "E-mail" %>

    </div>

    <div class="field">
     
      <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <div class="ui buttons">
        <%= f.submit "Log in", :class => "ui button", :style => "background-color:#1abc9c;color:white;" %>
        <div class="or" data-text="or"></div>
        <button class="ui positive button"><a href="<%= new_client_registration_path %>" style="color:white;">Sign Up</a></button>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>



