<div class="product-big-title-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="product-bit-title text-center">
          <h2>Log In</h2>
        </div>
      </div>
    </div>
  </div>
</div> <!-- End Page title area -->
<div class="container">
<br><br> 
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, :style => "font-size: 20px;"%><br>
      <%= f.email_field :email, autofocus: true, :class => "ui icon input", :placeholder => "Email" %>
      <br>
    </div>

    <div class="field">
      <%= f.label :password, :style => "font-size: 20px;" %><br>
      <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
      <br>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me , :style => "font-size: 20px;"%>
      </div>
    <% end %>

    <div class="actions">
      <div class="ui buttons">
        <%= link_to "Sign Up", new_client_registration_path, :class => "ui button button-hover", :style => "background-color:#719ac8;color:white;font-size:16px;" %>     
      </div>
    </div>
  <% end %>
<br>
  <%= render "devise/shared/links" %>
  <br><br>
</div>



