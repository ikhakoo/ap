<br><br><br>
<div>
<h2></h2>

<% if @product.default_image %>
  <%= image_tag @product.default_image.path, :width => '200px', :style => "float:right" %>
<% end %>


<div class="itemDescription">
	<p><%= @product.short_description %></p>
</div>

<div>
	<strong>Price: </strong><%= number_to_currency @product.price %>
	<%= link_to "Add to basket", product_path(@product.permalink), :method => :post, class: "ui button primary" %>
</div>


<hr>
<%= simple_format @product.description %>
<hr>

<p><%= link_to "Back to list", root_path, class: "ui button primary" %></p>
</div>


<div class="ui link cards">
  <div class="card">
    <div class="image">
      <img class="slide-image" src="http://placehold.it/290x290" alt="" style="max-width:100%;">
    </div>
    <div class="content">
      <div class="header"><%= @product.name %></div>
      <div class="meta">
        <a>Friends</a>
      </div>
      <div class="description">
        Veronika Ossi is a set designer living in New York who enjoys kittens, music, and partying.
      </div>
    </div>
    <div class="extra content">
      <span class="right floated">
        Joined in 2013
      </span>
      <span>
        <i class="user icon"></i>
        75 Friends
      </span>
    </div>
  </div>
</div>