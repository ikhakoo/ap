<div>
<h2><%= @product.name %></h2>

<% if @product.default_image %>
  <%= image_tag @product.default_image.path, :width => '200px', :style => "float:right" %>
<% end %>


<div class="itemDescription">
	<p><%= @product.short_description %></p>
</div>

<div class="itemPurchaseOptions">
	<ul>
	  <li><b><%= number_to_currency @product.price %></b></li>
	  <li><a><%= link_to "Add to basket", product_path(@product.permalink), :method => :post %></a></li>
	</ul>
</div>


<hr>
<%= simple_format @product.description %>
<hr>

<p><%= link_to "Back to list", root_path %></p>
</div>