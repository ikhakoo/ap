            <img src="https://s3-us-west-2.amazonaws.com/ap-uniforms-pictures/image-5.jpeg" alt="">
          </div>
        </div>
      </div>
    </div>
  </div>
</div> <!-- End brands area -->
    
<div class="product-widget-area">
  <div class="zigzag-bottom"></div>
  <div class="container">
      <div class="row">
        <div class="col-md-4">
        <div class="single-product-widget">
            <h2 class="product-wid-title">Scrub Tops</h2>
              <a href="<%= nurse_tops_path %>" class="wid-view-more">View All</a>
                <% @products.each do |category, products| %>
                  <% if category.name.downcase == 'tops' %>
                    <% products.sample(4).each do |product| %>
                  
                <div class="single-wid-product">
                    <a href="<%= product_path(product.permalink) %>"><img src="<%= product.default_image.path %>" alt="" class="product-thumb"></a>
                    <h2><a href="<%= product_path(product.permalink) %>"><%= product.name.split("-").first %></a></h2>
                    <div class="product-wid-price">
                        <ins><%= number_to_currency product.price %></ins> <del><%= number_to_currency (product.price*1.13).to_f %></del>
                    </div>                            
                	</div>
                <% end %>
               <% end %>
              <% end %>
            </div>
          </div>
          <div class="col-md-4">
          <div class="single-product-widget">
            <h2 class="product-wid-title">Scrub Sets</h2>
             	<a href="<%= nurse_sets_path %>" class="wid-view-more">View All</a>
