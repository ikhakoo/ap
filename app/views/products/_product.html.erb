<div style="text-align:center;">
  <%= paginate @products %>
  <br>
  <strong>Items Per Page:</strong>
  <%= select_tag :per_page, options_for_select([6,12,18,24], params[:per_page].to_i),
 { :onchange => "if(this.value){window.location='?per_page='+this.value;}" } %>
</div>

<div class="single-product-area">
  <div class="zigzag-bottom"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-3">
          <%= render 'sidebar' %>
        </div>
        <% @products.each_slice(3) do |row| %>
          <% row.each do |product| %>
            <div class="col-md-3 col-sm-6" style="height: 495px;">
              <div class="single-product">
                <div class="product-f-image">
                  <img src="<%= product.default_image.path %>" alt="" style="height:335px;width:280px;">
                    <div class="product-hover">
                        <a href="<%= product_path(product.permalink) %>" class="view-details-link"><i class="fa fa-link"></i> See details</a>
                    </div>
                </div>
              
                <h6>Style # - <%= product.sku %> - <a href="<%= product_path(product.permalink) %>"><%= product.name.split("-").first %></h6></a>
              
                <div class="product-carousel-price">
                  <ins><%= number_to_currency product.price %></ins> 
                  <% if product.product_category_id == 22 %>
                  <del><%= number_to_currency (product.price*1.35).to_f %></del>
                  <% end %>
                </div> 
                <hr>
              </div> 
              <!-- end prod -->
            </div>
            <% end %>
          <% end %>
<!-- end col -->
    </div>
<!-- end row -->
  </div>
  <div style="text-align:center;">
  <%= paginate @products %>
</div>
</div>