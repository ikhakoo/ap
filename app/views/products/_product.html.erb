<div style="text-align:center;">
  <%= paginate @products %>
</div>

<div class="single-product-area">
  <div class="zigzag-bottom"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-3">
          <%= render 'sidebar' %>
        </div>
        <% @products.each_slice(3) do |row| %>
          <% row.each do |product| %>
            <div class="col-md-3 col-sm-6">
              <div class="single-product">
                <div class="product-f-image">
                  <img src="<%= product.default_image.path %>" alt="" style="height:335px;width:280px;">
                    <div class="product-hover">
                        <a href="<%= product_path(product.permalink) %>" class="view-details-link"><i class="fa fa-link"></i> See details</a>
                    </div>
                </div>
              
                <h2><a href="<%= product_path(product.permalink) %>"><%= product.name.split("-").first %></a></h2>
              
                <div class="product-carousel-price">
                  <ins><%= number_to_currency product.price %></ins> <del><%= number_to_currency (product.price*1.13).to_f %></del>
                </div> 
              </div> 
              <!-- end prod -->
            </div>
            <% end %>
          <% end %>
<!-- end col -->
    </div>
<!-- end row -->
  </div>
  <div style="text-align:center;">
  <%= paginate @products %>
</div>
</div>