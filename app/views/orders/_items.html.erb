<div class="col-md-12">
    <div class="product-content-right">
        <div class="woocommerce">
            <form method="post" action="#">
                <table cellspacing="0" class="shop_table cart">
                    <thead>
                      <tr>
                        <th class="product-remove">&nbsp;</th>
                        <th class="product-thumbnail">&nbsp;</th>
                        <th class="product-name">Product</th>
                        <th class="product-price">Price</th>
                        <th class="product-quantity">Quantity</th>
                        <th class="product-subtotal">Total (w/Tax)</th>
                      </tr>
                    </thead>
                    <% if order.order_items.count > 0 %>
                    <tbody>

        <% order.order_items.each do |item| %>
                        <tr class="cart_item">
                            <td class="product-remove">
                                <a title="Remove this item" class="remove" href="#">Ã—</a> 
                            </td>

                            <td class="product-thumbnail">
                                <a href="<%= product_path(item.ordered_item.permalink) %>"><img width="145" height="145" alt="poster_1_up" class="shop_thumbnail" src="<%= item.ordered_item.default_image.path %>"></a>
                            </td>

                            <td class="product-name">
                                <a href="single-product.html"><%= item.ordered_item.full_name %></a> 
                            </td>

                            <td class="product-price">
                                <span class="amount"><%= number_to_currency (item.sub_total/item.quantity) %></span> 
                            </td>

                            <td class="product-quantity">
                                <div class="quantity buttons_added">
                                    <input type="button" class="minus" value="-">
                                    <input type="number" size="4" class="input-text qty text" title="Qty" value="<%= item.quantity.to_i %>" min="0" step="1" style="text-align:center;">
                                    <input type="button" class="plus" value="+">
                                </div>
                            </td>

                            <td class="product-subtotal">
                                <span class="amount"><%= number_to_currency (item.sub_total+item.tax_amount) %></span> 
                            </td>
                        </tr>
                        <% end %>

                         

                        <tr>
                            <td class="actions" colspan="6">
                                
                                <%= link_to 'EMPTY BASKET', basket_path, :method => :delete, class: "ui button", style: "background-color:#1abc9c;color:white;" %>
                                <% if !current_page?(action: 'checkout') && !current_page?(action: 'confirmation') %>
            <%= link_to 'CHECKOUT', checkout_path, class: "ui button", style: "background-color:#1abc9c;color:white;" %>
          <% end %>
                            </td>
                        </tr>
<% else %>
                        
                        Basket is empty
                        <% end %>
                       
                    </tbody>
                </table>
            </form>

            


            

            <div class="cart-collaterals">


            <div class="cross-sells">
            <% if current_page?(action: 'checkout') %>
              <%= render 'form' %>
            <% end %>
            </div>


            <div class="cart_totals ">
                <h2>Cart Totals</h2>

                <table cellspacing="0">
                    <tbody>
                        <tr class="cart-subtotal">
                            <th>Cart Subtotal</th>
                            <td><span class="amount"><%= number_to_currency (order.total/1.13) %></span></td>
                        </tr>

                        <tr class="shipping">
                            <th>Shipping and Handling</th>
                            <td>Free Shipping</td>
                        </tr>

                        <tr class="order-total">
                            <th>Order Total</th>
                            <td><strong><span class="amount"><%= number_to_currency order.total %></span></strong> </td>
                        </tr>
                    </tbody>
                </table>
            </div>
          </div>
        </div>                        
    </div>                    
  </div>
</div>
</div>
</div>


          
        