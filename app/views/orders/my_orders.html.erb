<% @orders.each do |order| %>
<!-- Put order info here (date, status, etc) -->
<!-- Pry it out for more info on what is in @orders -->
	<% order.order_items.each do |item| %>
		<% if item.ordered_item.default_image %>
    		<%= image_tag item.ordered_item.default_image.path, 
    				:width => '150px', :height => '150px' %>
    <% end %>
			<%= item.ordered_item.full_name %>
			<%= item.ordered_item.description %>
			<%= number_to_currency item.sub_total %>
      <%= item.quantity %>
			<%= number_to_currency item.tax_amount %>
  <% end %>
<% end %>

